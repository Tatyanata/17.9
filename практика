array = [int(x) for x in input(" Введите какие-либо числа от 1 до 100: ").split()]
def s_sort(array):
    if len(array) < 2:
        return array[:]
    else:
        middle = len(array) // 2
        left = s_sort(array[:middle])
        right = s_sort(array[middle:])
        return s(left, right)
def merge(left, right):
    result = []
    i, j = 0, 0
    while i < len(left) and j < len(right):
        if left[i] < right[j]:
            result.append(left[i])
            i += 1
        else:
            result.append(right[j])
            j += 1
    while i < len(left):
        result.append(left[i])
        i += 1
    while j < len(right):
        result.append(right[j])
        j += 1
    return result
    print(s_sort(array))
def b_search(array, element, left, right):
    if left > right: 
        return False 
    middle = (right + left) // 2 
    if array[middle] == element:  
        return middle 
    elif element < array[middle]: 
        return b_search(array, element, left, middle - 1)
    else:  
        return b_search(array, element, right, middle + 1)
while True:
    try:
        element = int(input("Введите число от 1 до 100: "))
        if element < 0 or element > 100:
            raise Exception
        break
    except ValueError:
        print("Нужно ввести число")
    except Exception:
        print("Неверный диапазон")
print(b_search(array, element, 0,  len(array)))
